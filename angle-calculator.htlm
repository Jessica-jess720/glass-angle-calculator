</head>
<body>
    <div class="container">
        <h2>ğŸ” å¼¹å­”æµ‹é‡è®¡ç®—å™¨</h2>
        
        <!-- é•¿è½´æµ‹é‡ç»„ -->
        <div class="measure-group">
            <h4>ğŸ“ é•¿è½´æµ‹é‡ï¼ˆæ¯«ç±³ï¼‰</h4>
            <input type="number" id="L1" placeholder="æµ‹é‡å€¼1">
            <input type="number" id="L2" placeholder="æµ‹é‡å€¼2">
            <input type="number" id="L3" placeholder="æµ‹é‡å€¼3">
        </div>

        <!-- çŸ­è½´æµ‹é‡ç»„ -->
        <div class="measure-group">
            <h4>ğŸ“ çŸ­è½´æµ‹é‡ï¼ˆæ¯«ç±³ï¼‰</h4>
            <input type="number" id="S1" placeholder="æµ‹é‡å€¼1">
            <input type="number" id="S2" placeholder="æµ‹é‡å€¼2">
            <input type="number" id="S3" placeholder="æµ‹é‡å€¼3">
        </div>

        <button onclick="calculate()">ğŸ“Š è®¡ç®—å¹³å‡å€¼å’Œè§’åº¦</button>

        <!-- å¹³å‡å€¼æ˜¾ç¤º -->
        <div id="averages">
            <h3>ğŸ“ˆ å¹³å‡å€¼ç»“æœ</h3>
            <div class="result-line">
                <span>é•¿è½´å¹³å‡ï¼š</span>
                <span id="avgL">--</span>
            </div>
            <div class="result-line">
                <span>çŸ­è½´å¹³å‡ï¼š</span>
                <span id="avgS">--</span>
            </div>
            <div class="result-line">
                <span>L/S æ¯”å€¼ï¼š</span>
                <span id="X">--</span>
            </div>
            <div class="result-line">
                <span>å…¥å°„è§’ Î¸ï¼š</span>
                <span id="theta">--Â°</span>
            </div>
        </div>

        <!-- å†å²è®°å½• -->
        <div id="history">
            <h3>ğŸ•’ è®¡ç®—å†å²ï¼ˆæœ€è¿‘10æ¡ï¼‰</h3>
            <div id="historyList"></div>
            <button onclick="clearHistory()" id="clearHistory">ğŸ—‘ï¸ æ¸…é™¤å†å²</button>
        </div>
    </div>

    <script>
        // åˆå§‹åŒ–åŠ è½½å†å²è®°å½•
        window.onload = loadHistory;

        // è®¡ç®—å¹³å‡å€¼ä¸»å‡½æ•°
        function calculate() {
            // è·å–æµ‹é‡å€¼
            const measurements = {
                L: [getValue('L1'), getValue('L2'), getValue('L3')],
                S: [getValue('S1'), getValue('S2'), getValue('S3')]
            };

            // éªŒè¯æ•°æ®
            if (!validateMeasurements(measurements)) return;

            // è®¡ç®—å¹³å‡å€¼
            const avgL = calculateAverage(measurements.L);
            const avgS = calculateAverage(measurements.S);

            // è®¡ç®—è§’åº¦
            const X = avgL / avgS;
            const Y = -2.245 + 2.317 * X;
            const theta = (Math.atan(Y) * 180 / Math.PI).toFixed(2);

            // æ˜¾ç¤ºç»“æœ
            document.getElementById('avgL').textContent = avgL.toFixed(2);
            document.getElementById('avgS').textContent = avgS.toFixed(2);
            document.getElementById('X').textContent = X.toFixed(4);
            document.getElementById('theta').textContent = theta + 'Â°';

            // ä¿å­˜è®°å½•
            saveToHistory(measurements, avgL, avgS, theta);
        }

        // è¾…åŠ©å‡½æ•°ï¼šè·å–è¾“å…¥å€¼
        function getValue(id) {
            return parseFloat(document.getElementById(id).value) || 0;
        }

        // è¾…åŠ©å‡½æ•°ï¼šéªŒè¯æµ‹é‡æ•°æ®
        function validateMeasurements(data) {
            const isValid = values => values.every(v => v > 0);
            
            if (!isValid(data.L)) {
                alert("âš ï¸ é•¿è½´æµ‹é‡å€¼éœ€å…¨éƒ¨ä¸ºæœ‰æ•ˆæ­£æ•°ï¼");
                return false;
            }
            if (!isValid(data.S)) {
                alert("âš ï¸ çŸ­è½´æµ‹é‡å€¼éœ€å…¨éƒ¨ä¸ºæœ‰æ•ˆæ­£æ•°ï¼");
                return false;
            }
            if (data.S.includes(0)) {
                alert("âš ï¸ çŸ­è½´æµ‹é‡å€¼ä¸èƒ½ä¸ºé›¶ï¼");
                return false;
            }
            return true;
        }

        // è¾…åŠ©å‡½æ•°ï¼šè®¡ç®—å¹³å‡å€¼ï¼ˆè‡ªåŠ¨å¿½ç•¥é›¶å€¼ï¼‰
        function calculateAverage(values) {
            const validValues = values.filter(v => v > 0);
            return validValues.reduce((a, b) => a + b, 0) / validValues.length;
        }

        // å†å²è®°å½•åŠŸèƒ½
        const HISTORY_KEY = "measurementHistory";

        function saveToHistory(measurements, avgL, avgS, theta) {
            let history = JSON.parse(localStorage.getItem(HISTORY_KEY)) || [];
            
            history.unshift({
                timestamp: new Date().toLocaleString(),
                measurements: measurements,
                averages: { L: avgL.toFixed(2), S: avgS.toFixed(2) },
                theta: theta
            });

            // ä¿ç•™æœ€è¿‘10æ¡
            if(history.length > 10) history.pop();

            localStorage.setItem(HISTORY_KEY, JSON.stringify(history));
            loadHistory();
        }

        function loadHistory() {
            const history = JSON.parse(localStorage.getItem(HISTORY_KEY)) || [];
            const list = document.getElementById('historyList');
            
            list.innerHTML = history.map(item => `
                <div class="history-item">
                    <div>â° ${item.timestamp}</div>
                    <div>ğŸ“ L: ${item.measurements.L.join(', ')}</div>
                    <div>ğŸ“ S: ${item.measurements.S.join(', ')}</div>
                    <div>ğŸ“Š å¹³å‡ L=${item.averages.L} S=${item.averages.S}</div>
                    <div>ğŸ¯ Î¸=${item.theta}</div>
                </div>
            `).join('');
        }

        function clearHistory() {
            localStorage.removeItem(HISTORY_KEY);
            loadHistory();
        }
    </script>
</body>
